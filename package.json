{
  "name": "animegenzai-desktop",
  "version": "1.9.4",
  "description": "AnimeGenzai es una aplicación de escritorio para ver anime.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec npm start",
    "eslint": "eslint ./**/*.js",
    "test": "jest",
    "build": "electron-builder"
  },
  "author": "ダイレクトコネクト",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TokyoTF/AnimeGenzai-Desktop.git"
  },
  "homepage": "animegenzai.xyz",
  "build": {
    "appId": "xyz.animegenzai.desktop",
    "productName": "AnimeGenzai Desktop",
    "win": {
      "target": "NSIS",
      "icon": "icon.ico",
      "publisherName": "ダイレクトコネクト",
      "signAndEditExecutable": true
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "license": "LICENSE.md",
      "runAfterFinish": false
    }
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.23.4",
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "electron-localshortcut": "^3.2.1",
    "electron-store": "^8.0.1",
    "express": "^4.17.2",
    "express-handlebars": "^6.0.2",
    "express-session": "^1.17.2",
    "express-useragent": "^1.0.15",
    "express-validator": "^6.14.0",
    "imagesloaded": "^5.0.0",
    "jquery": "^3.6.0",
    "jquery.transit": "^0.9.12",
    "moment": "^2.29.2",
    "multiple-select": "^1.5.2",
    "mysql": "^2.18.1",
    "open": "^8.4.0",
    "passport": "^0.5.2",
    "passport-local": "^1.0.0",
    "protocol-registry": "^1.3.13",
    "slick-carousel": "^1.8.1",
    "timeago.js": "^4.0.2",
    "update-electron-app": "^2.0.1"
  },
  "devDependencies": {
    "dotenv": "^11.0.0",
    "electron": "^17.0.0",
    "electron-builder": "^22.14.13",
    "eslint": "^8.14.0",
    "eslint-plugin-jest": "^26.1.5",
    "jest": "^28.0.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "npm-check-updates": "^12.1.0"
  }
}
